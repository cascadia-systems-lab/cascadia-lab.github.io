---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Cascadia AI Systems Lab">
  <!-- Hero Section -->
  <section class="section bg-gradient-to-b from-dark-bg via-dark-surface to-dark-bg">
    <div class="container-custom">
      <div class="mx-auto max-w-4xl text-center">
        <h1 class="mb-6 text-5xl font-bold tracking-tight sm:text-6xl lg:text-7xl">
          <span class="text-gradient">Cascadia AI Systems Lab</span>
        </h1>
        <p class="mb-8 text-xl text-text-secondary sm:text-2xl">
          Independent AI Infrastructure Research & Development Environment
        </p>
        <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a href="/research" class="btn btn-primary">
            View Research
          </a>
          <a href="/infrastructure" class="btn btn-secondary">
            Explore Infrastructure
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="section border-t border-dark-border">
    <div class="container-custom">
      <div class="mx-auto max-w-3xl">
        <h2 class="mb-6 text-center text-3xl font-bold sm:text-4xl">Mission</h2>
        <p class="mb-4 text-center text-xl text-accent-blue">
          Build practical, self-hosted AI infrastructure that works.
        </p>
        <p class="text-center text-lg text-text-secondary">
          Cascadia AI Systems Lab is a long-term infrastructure laboratory focused on designing,
          building, and operating practical AI systems at the intersection of GPU computing, data
          engineering, and modern infrastructure.
        </p>
      </div>
    </div>
  </section>

  <!-- Core Focus Areas -->
  <section class="section bg-dark-surface">
    <div class="container-custom">
      <h2 class="mb-12 text-center text-3xl font-bold sm:text-4xl">Core Focus Areas</h2>
